{{{ $master := env "ES_MASTER_NODE" }}{{ $data := env "ES_DATA_NODE" }}
  "service": {
    "name": "elasticsearch",
    "port": 9200,
    "tags": [{{ if eq $master "true" }}"master"{{ else }}"data"{{ end }}],
    "check": {
      "script": "nmap 127.0.0.1 -PN -p 9200 | grep open",
      "interval": "10s"
    }
  }
}
